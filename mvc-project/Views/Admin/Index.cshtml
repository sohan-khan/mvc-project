@model IEnumerable<mvc_project.Models.AdminPanel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12 m-2">
        <div class="card border-info">
            <div class="card-header">
                <h2 class="card-title">Admin Panel</h2>
                <h6 class="card-subtitle d-flex justify-content-between text-muted">Admin Details <a href="@Url.Action("Create","Admin")" class="btn btn-primary" title="Create new employee"><i class="fa fa-plus">Add New</i></a></h6>
            </div>
            <div class="card-body">
                @Html.Raw(TempData["delmsg"])
                <table class="table table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Role)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                  

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit","Admin", new { id = item.AdminId })" class="btn btn-success"><span class="fa fa-edit">Edit</span></a>
                                <a href="@Url.Action("Delete","Admin", new { id = item.AdminId })" class="btn btn-danger"><span class="fa fa-trash">Delete</span></a>

                            </td>
                        </tr>
                    }

                </table>
            </div>

            <div class="card-footer">
                @Model.Count() Admins
            </div>
        </div>
    </div>
</div>

