@model mvc_project.Models.viewmodel.DeptwiseDoctorvm

@{
    ViewBag.Title = "Edit";
}

<h2>Edit DoctorId @Model.DeptwiseId</h2>

@using (Html.BeginForm("Edit", "DeptwiseDoctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.DeptwiseId)
<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentId, "DepartmentId",new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("DepartmentId", ViewBag.departments as SelectList, "--Select One--",  new { @class = "form-control col-6" })
            @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DoctorId, "DoctorId", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("DoctorId", ViewBag.doctors as SelectList, "--Select One--", new { @class = "form-control col-6" })
            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Designation, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control col-6" } })
            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Institution,  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Institution, new { @class = "form-control col-6" })
            @Html.ValidationMessageFor(model => model.Institution, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VisitFee, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VisitFee,  new { @class = "form-control col-6" } )
            @Html.ValidationMessageFor(model => model.VisitFee, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Image,new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="@Url.Content( Session["picture"].ToString())" width="50" height="40" /><br /><br />
            @Html.TextBoxFor(model => model.Image, new { @class = "form-control col-6", type = "file" })
            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger col-4" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
